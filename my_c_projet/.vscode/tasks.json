{
    "version": "2.0.0",
    "tasks"  : 
    [
        {
            "label"  : "cmake_generate",
            "type"   : "shell",
            "command": "cmake -G Ninja -B build"
        },
        {
            "label"  : "ninja_build",
            "type"   : "shell",
            "command": "ninja -C build"
        },
        {
            "label"  : "run_executable",
            "type"   : "shell",
            "command": "./build/${workspaceFolderBasename}"
        },
        {
            "label"  : "build_and_run",
            "type"   : "shell",
            "dependsOn": 
            [
                "cmake_generate",
                "ninja_build",
                "run_executable"
            ],
            "command": "echo All tasks executed successfully."
        }
    ]
}
